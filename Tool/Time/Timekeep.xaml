<Window x:Class="Tildetool.Time.Timekeep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tildetool.Time"
        xmlns:Shape="clr-namespace:Tildetool.Shape"
        xmlns:tildetool="clr-namespace:Tildetool.WPF"
        mc:Ignorable="d" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}"
        KeyDown="Window_KeyDown" Topmost="True" WindowState="Normal" SizeToContent="Manual" VerticalAlignment="Center" Left="0" Top="0" Height="1000" Loaded="OnLoaded"
        d:DesignWidth="1200">
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="ColorBackfill" Color="#FF021204"/>
        <SolidColorBrush x:Key="ColorBackground" Color="#FF042508"/>
        <SolidColorBrush x:Key="ColorTextFore" Color="#FFC3F1AF"/>
        <SolidColorBrush x:Key="ColorTextBack" Color="#FF449637"/>
        <Color x:Key="ColorGlow1">#FFDEEFBA</Color>
        <Color x:Key="ColorGlow2">#FFAAF99D</Color>

        <!-- Styles -->

        <!-- Templates -->
        <DataTemplate x:Key="CommandOption">
            <Grid HorizontalAlignment="Left">
                <TextBlock x:Name="Hotkey" Text="1" HorizontalAlignment="Left" TextAlignment="Center" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="8" VerticalAlignment="Top" Margin="10,1,10,0"/>
                <Grid x:Name="Area" Background="#FF042508" Margin="10,10,10,0" Height="44" VerticalAlignment="Center">
                    <TextBlock x:Name="Text" Text="Alternate" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" FontSize="16" Margin="10,1,10,1"/>
                </Grid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DailyHeaderCell">
            <TextBlock Text="0900" Margin="-50,0,0,0" Width="100" HorizontalAlignment="Left" TextAlignment="Center" VerticalAlignment="Top" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="16"/>
        </DataTemplate>
        <DataTemplate x:Key="DailyDivider">
            <Grid Background="#80042508" Width="1" HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
        </DataTemplate>
        <DataTemplate x:Key="ScheduleEntry">
            <Grid Background="#20A8611F" Margin="1,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock x:Name="ScheduleText" Text="Sketch" Margin="0,0,0,6" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Bottom" FontFamily="Cascadia Code Light" Foreground="#FFA8611F" FontSize="12"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="Indicator">
            <StackPanel Orientation="Horizontal" Background="#50042508" Height="12" Margin="1,1,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <TextBlock x:Name="Icon" Text="&lt;" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="#FFF3FEFF" FontSize="10" Margin="2,0,0,0"/>
                <TextBlock x:Name="Text" Text="Slow" HorizontalAlignment="Stretch" TextAlignment="Center" VerticalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="#FF82EBFF" FontSize="10" Margin="3,0,2,0"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="IndicatorPane">
            <Grid Height="42" Margin="0,0,10,0">
                <Frame x:Name="Backfill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#40449637"></Frame>
                <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Top">
                    <TextBlock x:Name="Title" Text="[P]rogress" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="12" VerticalAlignment="Center" Margin="8,0,8,0"/>
                    <TextBlock x:Name="Icon" Text="+" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="16" VerticalAlignment="Center" Margin="5,0,8,0"/>
                    <TextBlock x:Name="Text" Text="Above Average" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="16" VerticalAlignment="Center" Margin="-3,0,8,0"/>
                </StackPanel>
                <TextBlock x:Name="Date" Text="2 days ago" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="10" VerticalAlignment="Bottom" Margin="8,0,8,5"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="IndicatorRow">
            <tildetool:FreeGrid Margin="0,0,0,0">
                <TextBlock x:Name="Title" Text="Twilight" FontFamily="Cascadia Code Light" TextAlignment="Right" VerticalAlignment="Center" FontSize="10" tildetool:FreeGrid.Top="15%" tildetool:FreeGrid.Width="160" tildetool:FreeGrid.Height="12"  Margin="0,0,5,0"/>
                <Grid x:Name="RowLine" Background="#A0FF0000" tildetool:FreeGrid.Top="15%" tildetool:FreeGrid.Width="100%" tildetool:FreeGrid.Height="12" Margin="160,0,0,0"/>
            </tildetool:FreeGrid>
        </DataTemplate>
        <DataTemplate x:Key="IndicatorGraph">
            <tildetool:FreeGrid Margin="0,10,0,0">
                <Grid Background="#50042508" Margin="180,0,80,0"></Grid>
                <Grid x:Name="Rows" Margin="0 10 0 10">
                    <ContentControl ContentTemplate="{StaticResource IndicatorRow}"></ContentControl>
                </Grid>
                <Grid Margin="180,0,80,0">
                    <Path x:Name="IndicatorGraphLine" Margin="0 10 0 10" StrokeThickness="2" Stretch="Fill" StrokeLineJoin="Bevel">
                        <Path.Stroke>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="{DynamicResource ColorGlow1}"/>
                                <GradientStop Color="{DynamicResource ColorGlow2}" Offset="1"/>
                            </LinearGradientBrush>
                        </Path.Stroke>
                        <Path.Data>
                            <PathGeometry Figures="M 0,-1 L 0.02,-40 L 0.04,0 0.6,20 1,0" />
                        </Path.Data>
                    </Path>
                </Grid>
            </tildetool:FreeGrid>
       </DataTemplate>
        <DataTemplate x:Key="IndicatorWorkRow">
            <Grid x:Name="RowLine" Background="#A0ABE2A3" Height="12" Margin="0,3,0,3"/>
        </DataTemplate>
        <DataTemplate x:Key="DailyCell">
            <Grid Height="20" Background="#FF0D211D" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <Grid x:Name="ActiveGlow" Width="14" HorizontalAlignment="Right" VerticalAlignment="Stretch">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                            <GradientStop Color="#00042508"/>
                            <GradientStop Color="#FF24751F" Offset="0.85"/>
                            <GradientStop Color="#FF66C657" Offset="0.95"/>
                            <GradientStop Color="#FFF0FFF0" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                </Grid>
                <TextBlock x:Name="StartTime" Text="0900" Margin="2,2,2,0" HorizontalAlignment="Left" TextAlignment="Center" VerticalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="#FF517F65" FontSize="10"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock x:Name="CellTimeH" Text="8" Margin="0,0,0,0" TextAlignment="Left" VerticalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="#FF69A582" FontSize="12"/>
                    <TextBlock x:Name="CellTimeM" Text="01" Margin="2,0,0,-4" TextAlignment="Left" VerticalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="8"/>
                </StackPanel>
                <TextBlock x:Name="EndTime" Text="0100" Margin="2,2,2,0" HorizontalAlignment="Right" TextAlignment="Center" VerticalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="10"/>
                <TextBlock x:Name="ProjectName" Text="Morning" Margin="2,0,2,-12" TextAlignment="Center" VerticalAlignment="Bottom" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="10"/>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="DailyRow">
            <Grid Height="35" Background="#50042508">
                <StackPanel Margin="0,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock x:Name="HeaderDate" Text="22/10/25" HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Bottom" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="12"/>
                    <TextBlock x:Name="HeaderNightH" Text="8" Margin="12,0,0,0" HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Bottom" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="10"/>
                    <TextBlock x:Name="HeaderNightM" Text="01" Margin="2,0,0,0.5" HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Bottom" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="8"/>
                </StackPanel>
                <TextBlock x:Name="HeaderName" Text="Free Time" Width="150" HorizontalAlignment="Left" TextAlignment="Right" VerticalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="16"/>
                <Grid x:Name="DailyCells" Margin="160,0,60,0">
                    <ContentControl ContentTemplate="{StaticResource DailyCell}"></ContentControl>
                </Grid>
                <TextBlock x:Name="HeaderNameR" Text="Free Time" Margin="0,0,70,0" HorizontalAlignment="Right" TextAlignment="Right" VerticalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="#FF416F55" FontSize="12"/>
                <StackPanel Width="50" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock x:Name="HeaderTimeH" Text="8" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="16" VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="HeaderTimeM" Text="01" Margin="4,0,0,1" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="12" VerticalAlignment="Bottom"/>
                </StackPanel>
                <Grid x:Name="RowNowGrid" Margin="160,0,60,0">
                    <Grid x:Name="RowNow" Margin="0,2,0,2" Background="#FFABE2A3" Width="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Grid.Column="1" IsHitTestVisible="False"/>
                </Grid>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="SummaryRow">
            <Grid Height="35" Background="#50042508">
                <StackPanel Margin="0,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock x:Name="HeaderDate" Text="22/10/25" HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Bottom" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="12"/>
                    <TextBlock x:Name="HeaderNightH" Text="8" Margin="12,0,0,0" HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Bottom" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="10"/>
                    <TextBlock x:Name="HeaderNightM" Text="01" Margin="2,0,0,0.5" HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Bottom" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="8"/>
                </StackPanel>
                <TextBlock x:Name="HeaderName" Text="Free Time" Width="150" HorizontalAlignment="Left" TextAlignment="Right" VerticalAlignment="Center" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="16"/>
                <Grid x:Name="DailyCells" Margin="160,0,60,0">
                    <ContentControl ContentTemplate="{StaticResource DailyCell}"></ContentControl>
                </Grid>
                <StackPanel Width="50" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock x:Name="HeaderTimeH" Text="8" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="16" VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="HeaderTimeM" Text="01" Margin="4,0,0,1" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="12" VerticalAlignment="Bottom"/>
                </StackPanel>
                <Grid x:Name="RowNowGrid" Margin="160,0,60,0">
                    <Grid x:Name="RowNow" Margin="0,2,0,2" Background="#FFABE2A3" Width="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Grid.Column="1" IsHitTestVisible="False"/>
                </Grid>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <!-- Timeline Display -->
        <Grid x:Name="Daily" HorizontalAlignment="Stretch" VerticalAlignment="Top" MinWidth="500" Margin="100,100,100,0">
            <Grid x:Name="BackfillDaily" Background="#FFF1F7E5"/>
            <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                <Grid x:Name="DailyContent" Margin="20,25,20,10" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <TextBlock x:Name="DailyDate" Text="22/10/25 Sun" Width="160" Height="20" HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Top" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="14" Margin="-1,1,0,0"/>
                    <tildetool:FreeGrid Margin="160,18,60,25" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid x:Name="DailyRowHover" Background="#60248528" tildetool:FreeGrid.Left="25%" tildetool:FreeGrid.Width="20%"/>
                        <TextBlock x:Name="DailyRowHoverL" Text="0800" tildetool:FreeGrid.Width="25%" Margin="0,-28,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Center" TextWrapping="NoWrap" FontFamily="Cascadia Code Light" Foreground="#60248528" FontSize="12"/>
                        <TextBlock x:Name="DailyRowHoverR" Text="0800" tildetool:FreeGrid.Left="45%" tildetool:FreeGrid.Width="50" Margin="0,-28,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" TextAlignment="Center" TextWrapping="NoWrap" FontFamily="Cascadia Code Light" Foreground="#60248528" FontSize="12"/>
                    </tildetool:FreeGrid>
                    <Grid x:Name="HeaderRow" Margin="160,0,60,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <ContentControl ContentTemplate="{StaticResource DailyHeaderCell}"></ContentControl>
                    </Grid>
                    <Grid x:Name="DailyDividers" Margin="160,16,60,17" HorizontalAlignment="Stretch">
                        <ContentControl ContentTemplate="{StaticResource DailyDivider}"></ContentControl>
                    </Grid>
                    <Grid x:Name="ScheduleGrid" Margin="160,20,60,0" HorizontalAlignment="Stretch">
                        <ContentControl ContentTemplate="{StaticResource ScheduleEntry}"></ContentControl>
                    </Grid>
                    <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                        <StackPanel x:Name="DailyRows" Orientation="Vertical" Margin="0,0,0,0">
                            <ContentControl ContentTemplate="{StaticResource DailyRow}"></ContentControl>
                        </StackPanel>
                        <Grid Background="#40449637" Width="80" Height="1" HorizontalAlignment="Right"/>
                        <StackPanel Width="50" Height="18" Margin="0,8,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock x:Name="SumTimeH" Text="8" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="16" VerticalAlignment="Bottom"/>
                            <TextBlock x:Name="SumTimeM" Text="01" Margin="4,0,0,1" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="12" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </StackPanel>
                    <Grid x:Name="NowDividerGrid" Margin="160,18,60,25" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid Background="#FFABE2A3" Width="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Column="0"/>
                    </Grid>
                    <Grid x:Name="NightLength" Margin="0,0,0,28" Width="150" Height="34" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                        <StackPanel Height="18" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock x:Name="NightLengthPre" Text="..." Margin="0,0,0,1" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="10" VerticalAlignment="Bottom"/>
                            <TextBlock x:Name="NightLengthH" Text="8" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="14" VerticalAlignment="Bottom"/>
                            <TextBlock x:Name="NightLengthM" Text="01" Margin="3,0,0,0.5" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="10" VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="TimeAreaHotspot" Margin="160,18,60,25" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#01ABE2A3" MouseEnter="TimeAreaHotspot_MouseEnter" MouseLeave="TimeAreaHotspot_MouseLeave" MouseMove="TimeAreaHotspot_MouseMove" MouseLeftButtonDown="TimeAreaHotspot_MouseLeftButtonDown" MouseLeftButtonUp="TimeAreaHotspot_MouseLeftButtonUp"/>
                </Grid>
    
                <Grid x:Name="Summary" Margin="20,25,20,10" HorizontalAlignment="Stretch" VerticalAlignment="Top" Visibility="Collapsed">
                    <TextBlock x:Name="SummaryDate" Text="22/10/25 Sun" Width="160" Height="20" HorizontalAlignment="Left" TextAlignment="Left" VerticalAlignment="Top" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextFore}}" FontSize="14" Margin="-1,1,0,0"/>
                    <tildetool:FreeGrid Margin="160,18,60,25" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    </tildetool:FreeGrid>
                    <StackPanel x:Name="SummaryRows" Orientation="Vertical" Margin="0,20,0,0">
                        <ContentControl ContentTemplate="{StaticResource SummaryRow}"></ContentControl>
                    </StackPanel>
                </Grid>

                <tildetool:FreeGrid x:Name="IndicatorPanel" Background="#50042508" Margin="180,10,80,0" MouseEnter="IndicatorPanel_MouseEnter" MouseLeave="IndicatorPanel_MouseLeave" MouseMove="IndicatorPanel_MouseMove" MouseLeftButtonDown="IndicatorPanel_MouseLeftButtonDown">
                    <tildetool:StackPanelShift Orientation="Vertical" x:Name="Indicators" Margin="0,1,0,2" ItemThickness="12" MinHeight="12">
                        <ContentControl ContentTemplate="{StaticResource Indicator}"></ContentControl>
                    </tildetool:StackPanelShift>
                    <Grid x:Name="IndicatorHover" Background="#FFABE2A3" tildetool:FreeGrid.Left="15%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                </tildetool:FreeGrid>
                <Grid x:Name="IndicatorGraphGrid">
                    <Grid Margin="180,30,80,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <tildetool:FreeGrid x:Name="Graph1" Grid.Column="0">
                            <TextBlock x:Name="GraphText1" Text="22/10/4" tildetool:FreeGrid.Left="0%" tildetool:FreeGrid.Width="100%" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="12" Margin="5,1,5,0"/>
                            <TextBlock x:Name="GraphTime1" Text="4h" tildetool:FreeGrid.Left="0%" tildetool:FreeGrid.Width="100%" TextAlignment="Right" FontFamily="Cascadia Code Light" Foreground="#90D60000" FontSize="12" Margin="5,1,5,0"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="14.2857142857%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="28.5714285714%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="42.8571428571%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="57.1428571429%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="71.4285714286%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="85.7142857143%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A0ABE2A3" tildetool:FreeGrid.Left="100%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                        </tildetool:FreeGrid>
                        <tildetool:FreeGrid x:Name="Graph2" Grid.Column="1">
                            <TextBlock x:Name="GraphText2" Text="22/10/4" tildetool:FreeGrid.Left="0%" tildetool:FreeGrid.Width="100%" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="12" Margin="5,1,5,0"/>
                            <TextBlock x:Name="GraphTime2" Text="4h" tildetool:FreeGrid.Left="0%" tildetool:FreeGrid.Width="100%" TextAlignment="Right" FontFamily="Cascadia Code Light" Foreground="#A0E4C320" FontSize="12" Margin="5,1,5,0"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="14.2857142857%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="28.5714285714%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="42.8571428571%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="57.1428571429%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="71.4285714286%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="85.7142857143%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A0ABE2A3" tildetool:FreeGrid.Left="100%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                        </tildetool:FreeGrid>
                        <tildetool:FreeGrid x:Name="Graph3" Grid.Column="2">
                            <TextBlock x:Name="GraphText3" Text="22/10/4" tildetool:FreeGrid.Left="0%" tildetool:FreeGrid.Width="100%" TextAlignment="Left" FontFamily="Cascadia Code Light" Foreground="{Binding Mode=OneWay, Source={StaticResource ColorTextBack}}" FontSize="12" Margin="5,1,5,0"/>
                            <TextBlock x:Name="GraphTime3" Text="4h" tildetool:FreeGrid.Left="0%" tildetool:FreeGrid.Width="100%" TextAlignment="Right" FontFamily="Cascadia Code Light" Foreground="#FF44DE28" FontSize="12" Margin="5,1,5,0"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="14.2857142857%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="28.5714285714%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="42.8571428571%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="57.1428571429%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="71.4285714286%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A008400A" tildetool:FreeGrid.Left="85.7142857143%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                            <Grid Background="#A0ABE2A3" tildetool:FreeGrid.Left="100%" tildetool:FreeGrid.Width="1" tildetool:FreeGrid.Height="100%"/>
                        </tildetool:FreeGrid>
