<Application x:Class="Tildetool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:local="clr-namespace:Tildetool"
             Startup="Main" ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <local:CloseCommand x:Key="OurCloseCommand" />
            <tb:TaskbarIcon x:Key="AppNotifyIcon"
                  IconSource="/Resource/Tildetool.ico"
                  ToolTipText="Tildetool v0.0.1"
                  DoubleClickCommand="{StaticResource OurCloseCommand}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
