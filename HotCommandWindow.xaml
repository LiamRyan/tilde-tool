<Window x:Class="Tildetool.HotCommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tildetool"
        mc:Ignorable="d" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}"
        KeyDown="Window_KeyDown" Topmost="True" WindowState="Normal" SizeToContent="Height" HorizontalAlignment="Left" Left="0" Top="0">
    <Window.Resources>
        <DataTemplate x:Key="CommandOption">
            <Grid VerticalAlignment="Top" Margin="10,0,10,0" Height="25" Background="#40000000" HorizontalAlignment="Left" Grid.Row="1">
                <TextBlock HorizontalAlignment="Left" TextAlignment="Center" FontFamily="Consolas" Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="10,0,10,0"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="RootFrame" Background="#CC101010" HorizontalAlignment="Left">
        <Grid x:Name="CommandBox" VerticalAlignment="Top" Margin="10,10,10,10" Height="40" Background="#80000000" Opacity="0" HorizontalAlignment="Left">
            <TextBlock x:Name="CommandEntry" HorizontalAlignment="Left" TextAlignment="Center" FontFamily="Consolas" Foreground="White" FontSize="20" VerticalAlignment="Center" Margin="10,0,10,0"/>
        </Grid>
        <Grid x:Name="OptionGrid" Margin="0,60,0,10" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>

    </Grid>
</Window>
