<Window x:Name="RootWindow" x:Class="Tildetool.ExplorerItemPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tildetool"
        xmlns:shape="clr-namespace:Tildetool.Shape"
        mc:Ignorable="d"
        Title="ExplorerItemPopup" Height="400" Width="400"
        ResizeMode="NoResize" Topmost="True" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <DataTemplate x:Key="OptionTemplate">
            <Grid Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
                <shape:Arc x:Name="Arc" Stroke="#FF101010" StrokeThickness="50" StartAngle="50" EndAngle="130" />
                <TextBlock x:Name="Text" TextWrapping="Wrap" FontFamily="Cascadia Code Light" FontSize="16" Foreground="#FF00FF56" VerticalAlignment="Top" Margin="20,20,20,20" TextAlignment="Center" FontWeight="Bold"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid Width="400" Height="400">
        <Grid x:Name="OptionGrid">
        </Grid>
    </Grid>
</Window>
